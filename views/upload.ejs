<!DOCTYPE html>
<html>
  <head>
    <title>Add Artwork</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .background-layer {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        z-index: -1;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: transparent;
        color: #1e293b;
        min-height: 100vh;
        padding: 20px;
        position: relative;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(226, 232, 240, 0.8);
      }

      h1 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
        margin-bottom: 24px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
      }

      .form-group.full-width {
        grid-column: 1 / -1;
      }

      .paintings-btn {
        position: fixed;
        top: 30px;
        right: 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 12px 28px;
        border-radius: 30px;
        font-size: 1.08rem;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        z-index: 50;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      .paintings-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      }
      @media (max-width: 600px) {
        .paintings-btn {
          top: 15px;
          right: 15px;
          padding: 10px 20px;
          font-size: 0.95rem;
        }
      }

      label {
        font-weight: 600;
        margin-bottom: 8px;
        color: #374151;
        font-size: 0.95rem;
      }

      input[type="text"],
      input[type="number"],
      select,
      textarea {
        padding: 14px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        background: #ffffff;
        color: #1e293b;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
      }

      input[type="text"]:focus,
      input[type="number"]:focus,
      select:focus,
      textarea:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        background: #ffffff;
      }

      input[type="text"]::placeholder,
      textarea::placeholder {
        color: #9ca3af;
      }

      select {
        cursor: pointer;
      }

      select option {
        background: #ffffff;
        color: #1e293b;
      }

      textarea {
        resize: vertical;
        min-height: 100px;
      }

      .file-upload {
        position: relative;
        display: inline-block;
        width: 100%;
      }

      input[type="file"] {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
      }

      .file-upload-label {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        border: 2px dashed #cbd5e1;
        border-radius: 12px;
        background: #f8fafc;
        cursor: pointer;
        transition: all 0.3s ease;
        min-height: 60px;
      }

      .file-upload-label:hover {
        border-color: #667eea;
        background: #f1f5f9;
      }

      .file-upload-text {
        color: #64748b;
        font-weight: 500;
      }

      #preview {
        margin-top: 16px;
        border-radius: 12px;
        max-width: 100%;
        height: auto;
        box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
        border: 2px solid #e2e8f0;
      }

      .submit-container {
        text-align: center;
        margin-top: 40px;
      }

      button[type="submit"] {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 16px 40px;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        min-width: 200px;
      }

      button[type="submit"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      }

      button[type="submit"]:active {
        transform: translateY(0);
      }

      @media (max-width: 768px) {
        .container {
          padding: 24px;
          margin: 10px;
        }

        .form-grid {
          grid-template-columns: 1fr;
          gap: 20px;
        }

        h1 {
          font-size: 2rem;
          margin-bottom: 30px;
        }

        body {
          padding: 10px;
        }
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f5f9;
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
      }

      /* Message Modal Styles */
      .message-modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(15, 23, 42, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
      }

      .message-modal.show {
        opacity: 1;
        visibility: visible;
      }

      .message-content {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        max-width: 400px;
        min-width: 300px;
        border: 1px solid rgba(226, 232, 240, 0.8);
        backdrop-filter: blur(15px);
        transform: scale(0.8);
        transition: transform 0.3s ease;
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.12);
      }

      .message-modal.show .message-content {
        transform: scale(1);
      }

      .message-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        animation: bounce 0.6s ease-in-out;
      }

      .message-icon.success {
        color: #059669;
      }

      .message-icon.error {
        color: #dc2626;
      }

      .message-icon.info {
        color: #2563eb;
      }

      .message-text {
        color: #374151;
        font-size: 1.2rem;
        font-weight: 500;
        line-height: 1.4;
      }

      @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
          transform: translateY(0);
        }
        40% {
          transform: translateY(-20px);
        }
        60% {
          transform: translateY(-10px);
        }
      }

      @keyframes fadeOut {
        0% {
          opacity: 1;
          transform: scale(1);
        }
        100% {
          opacity: 0;
          transform: scale(0.9);
        }
      }

      .message-modal.fade-out .message-content {
        animation: fadeOut 0.3s ease-out;
      }
    </style>
  </head>
  <body>
    <a href="/api/artworks/paintings" class="paintings-btn">🎨 View Gallery</a>

    <!-- background layer -->
    <div class="background-layer"></div>

    <!-- Message Modal -->
    <% if (message && message.trim() !== '') { %>
    <div class="message-modal" id="messageModal">
      <div class="message-content">
        <div class="message-icon" id="messageIcon">
          <!-- Icon will be set by JavaScript -->
        </div>
        <div class="message-text"><%= message %></div>
      </div>
    </div>
    <% } %>

    <div class="container">
      <h1>Add New Artwork</h1>
      <form
        id="artUploadForm"
        action="/api/artworks"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-grid">
          <div class="form-group">
            <label>Title</label>
            <input type="text" name="title" required />
          </div>

          <div class="form-group">
            <label>Artist</label>
            <input type="text" name="artist" required />
          </div>

          <div class="form-group">
            <label>Year</label>
            <input type="text" name="year" />
          </div>

          <div class="form-group">
            <label>Genre</label>
            <select name="genre" required>
              <% genres.forEach(function(genre) { %>
              <option value="<%= genre %>"><%= genre %></option>
              <% }); %>
            </select>
          </div>

          <div class="form-group">
            <label>Medium</label>
            <select name="medium" required>
              <% mediums.forEach(function(medium) { %>
              <option value="<%= medium %>"><%= medium %></option>
              <% }); %>
            </select>
          </div>

          <div class="form-group">
            <label>Currency</label>
            <select name="priceCurrency">
              <% currencies.forEach(function(currency) { %>
              <option value="<%= currency %>"><%= currency %></option>
              <% }); %>
            </select>
          </div>

          <div class="form-group">
            <label>Dimensions</label>
            <input
              type="text"
              name="dimensions"
              placeholder="e.g., 77 cm × 53 cm"
            />
          </div>

          <div class="form-group">
            <label>Location</label>
            <input type="text" name="location" />
          </div>

          <div class="form-group">
            <label>Price</label>
            <input type="number" name="price" step="0.01" />
          </div>

          <div class="form-group">
            <label>Catalog Number</label>
            <input type="text" name="catalogNumber" />
          </div>

          <div class="form-group">
            <label>Provenance</label>
            <input type="text" name="provenance" />
          </div>

          <div class="form-group">
            <label>Is On Display</label>
            <select name="isOnDisplay">
              <option value="true" selected>Yes</option>
              <option value="false">No</option>
            </select>
          </div>

          <div class="form-group full-width">
            <label>Image</label>
            <div class="file-upload">
              <input
                type="file"
                name="image"
                id="imageInput"
                accept="image/*"
                required
              />
              <div class="file-upload-label">
                <span class="file-upload-text"
                  >📁 Click to select an image</span
                >
              </div>
            </div>
            <img
              id="preview"
              src="#"
              alt="Image preview..."
              style="display: none; max-width: 300px"
            />
          </div>

          <div class="form-group full-width">
            <label>Description</label>
            <textarea
              name="description"
              rows="4"
              placeholder="Enter artwork description..."
            ></textarea>
          </div>

          <div class="form-group full-width">
            <label>Tags (comma-separated)</label>
            <input
              type="text"
              name="tags"
              placeholder="abstract, contemporary, oil painting..."
            />
          </div>
        </div>

        <div class="submit-container">
          <button type="submit">Add Artwork</button>
        </div>
      </form>
    </div>

    <script>
      // Simple image preview logic
      const input = document.getElementById("imageInput");
      const preview = document.getElementById("preview");
      const fileUploadText = document.querySelector(".file-upload-text");

      input.onchange = (evt) => {
        const [file] = input.files;
        if (file) {
          preview.src = URL.createObjectURL(file);
          preview.style.display = "block";
          fileUploadText.textContent = `📎 ${file.name}`;
        } else {
          preview.style.display = "none";
          fileUploadText.textContent = "📁 Click to select an image";
        }
      };

      // Message modal logic
      document.addEventListener("DOMContentLoaded", function () {
        const messageModal = document.getElementById("messageModal");
        const messageIcon = document.getElementById("messageIcon");

        if (messageModal) {
          const messageText = "<%= message %>";

          // Determine icon and class based on message content
          if (
            messageText.includes("successfully") ||
            messageText.includes("✅")
          ) {
            messageIcon.innerHTML = "✅";
            messageIcon.className = "message-icon success";
          } else if (
            messageText.includes("Error") ||
            messageText.includes("❌") ||
            messageText.includes("already exists") ||
            messageText.includes("already been uploaded")
          ) {
            messageIcon.innerHTML = "❌";
            messageIcon.className = "message-icon error";
          } else {
            messageIcon.innerHTML = "ℹ️";
            messageIcon.className = "message-icon info";
          }

          // Show modal
          setTimeout(() => {
            messageModal.classList.add("show");
          }, 100);

          // Auto hide after 5000ms (5 seconds)
          setTimeout(() => {
            messageModal.classList.add("fade-out");
            setTimeout(() => {
              messageModal.classList.remove("show");
              messageModal.style.display = "none";
            }, 300);
          }, 5000);

          // Allow manual close by clicking outside
          messageModal.addEventListener("click", function (e) {
            if (e.target === messageModal) {
              messageModal.classList.add("fade-out");
              setTimeout(() => {
                messageModal.classList.remove("show");
                messageModal.style.display = "none";
              }, 300);
            }
          });
        }
      });
    </script>
  </body>
</html>