<!DOCTYPE html>
<html>
  <head>
    <title>All Paintings</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        color: #1e293b;
        min-height: 100vh;
        padding: 20px;
      }

      .header {
        max-width: 1200px;
        margin: 0 auto 40px;
        text-align: center;
        position: relative;
      }

      .gallery-title {
        font-size: 3rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 16px;
      }

      .subtitle {
        font-size: 1.2rem;
        color: #64748b;
        font-weight: 400;
      }

      .add-btn {
        position: fixed;
        top: 30px;
        right: 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 14px 32px;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        z-index: 50;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
      }

      .add-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
      }

      .gallery-container {
        max-width: 1200px;
        margin: 0 auto;
      }

      .paintings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 32px;
      }

      .painting-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(226, 232, 240, 0.8);
      }

      .painting-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.12);
      }

      .image-container {
        position: relative;
        overflow: hidden;
        height: 300px;
        background: #f8fafc;
      }

      .painting-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .painting-card:hover .painting-image {
        transform: scale(1.05);
      }

      .image-overlay {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 8px 12px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #374151;
      }

      .painting-info {
        padding: 24px;
      }

      .painting-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 8px;
        line-height: 1.3;
      }

      .artist-year {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 1px solid #e2e8f0;
      }

      .artist-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #667eea;
      }

      .year-badge {
        background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
        color: #475569;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
      }

      .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
        margin-bottom: 20px;
      }

      .detail-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .detail-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .detail-value {
        font-size: 0.95rem;
        color: #334155;
        font-weight: 500;
      }

      .price-section {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 16px;
        padding: 16px;
        margin-bottom: 16px;
        border: 1px solid #e2e8f0;
      }

      .price-value {
        font-size: 1.3rem;
        font-weight: 700;
        color: #059669;
        margin-bottom: 4px;
      }

      .price-label {
        font-size: 0.85rem;
        color: #64748b;
        font-weight: 500;
      }

      .tags-container {
        margin-top: 16px;
      }

      .tags-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 8px;
      }

      .tag {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
      }

      .description {
        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid #e2e8f0;
      }

      .description-text {
        color: #475569;
        font-size: 0.95rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        font-weight: 500;
      }

      .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
      }

      .status-dot.on-display {
        background: #059669;
      }

      .status-dot.not-display {
        background: #dc2626;
      }

      .empty-state {
        grid-column: 1/-1;
        text-align: center;
        padding: 80px 20px;
        color: #64748b;
      }

      .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
        opacity: 0.5;
      }

      .empty-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 8px;
        color: #475569;
      }

      .empty-description {
        font-size: 1rem;
        color: #64748b;
      }

      @media (max-width: 768px) {
        body {
          padding: 15px;
        }

        .gallery-title {
          font-size: 2.2rem;
        }

        .paintings-grid {
          grid-template-columns: 1fr;
          gap: 24px;
        }

        .add-btn {
          top: 15px;
          right: 15px;
          padding: 12px 24px;
          font-size: 0.9rem;
        }

        .details-grid {
          grid-template-columns: 1fr;
          gap: 12px;
        }

        .painting-info {
          padding: 20px;
        }

        .image-container {
          height: 250px;
        }
      }

      @media (max-width: 480px) {
        .paintings-grid {
          grid-template-columns: 1fr;
        }
        
        .painting-card {
          border-radius: 16px;
        }
        
        .gallery-title {
          font-size: 1.8rem;
        }
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f5f9;
      }

      ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
      }
    </style>
  </head>
  <body>
    <a href="/api/artworks" class="add-btn">âœ¨ Add Artwork</a>
    
    <div class="header">
      <h1 class="gallery-title">Art Gallery</h1>
      <p class="subtitle">Discover our curated collection of masterpieces</p>
    </div>

    <div style="max-width: 400px; margin: 0 auto 32px; position: relative;">
  <input
    id="artistSearch"
    type="text"
    placeholder="Search artist nameâ€¦"
    autocomplete="off"
    style="width:100%;padding:14px 18px;border-radius:18px;font-size:1.09rem;border:1.5px solid #c7d2fe;box-shadow:0 1px 4px #e0e7ef;outline:none;margin-bottom:4px;"
  />
  <ul id="suggestions" style="position:absolute;top:48px;left:0;width:100%;z-index:40;background:#fff;border-radius:0 0 16px 16px;box-shadow:0 6px 24px rgba(102,126,234,0.1);list-style:none;padding:0;margin:0;display:none;max-height:200px;overflow-y:auto;"></ul>
</div>


    <div class="gallery-container">
      <div class="paintings-grid">
        <% if (paintings.length === 0) { %>
        <div class="empty-state">
          <div class="empty-icon">ðŸŽ¨</div>
          <div class="empty-title">No Paintings Found</div>
          <div class="empty-description">Start building your collection by adding your first artwork!</div>
        </div>
        <% } %>
        
        <% paintings.forEach(function(painting) { %>
        <div class="painting-card">
          <div class="image-container">
            <img
              src="<%= painting.imageUrl %>"
              class="painting-image"
              alt="<%= painting.title %>"
              loading="lazy"
            />
            <div class="image-overlay">
              <%= painting.catalogNumber || 'Uncatalogued' %>
            </div>
          </div>
          
          <div class="painting-info">
            <h2 class="painting-title"><%= painting.title %></h2>
            
            <div class="artist-year">
              <span class="artist-name"><%= painting.artist %></span>
              <% if (painting.year) { %>
              <span class="year-badge"><%= painting.year %></span>
              <% } %>
            </div>

            <div class="details-grid">
              <div class="detail-item">
                <span class="detail-label">Genre</span>
                <span class="detail-value"><%= painting.genre %></span>
              </div>
              
              <div class="detail-item">
                <span class="detail-label">Medium</span>
                <span class="detail-value"><%= painting.medium %></span>
              </div>
              
              <% if (painting.dimensions) { %>
              <div class="detail-item">
                <span class="detail-label">Dimensions</span>
                <span class="detail-value"><%= painting.dimensions %></span>
              </div>
              <% } %>
              
              <% if (painting.location) { %>
              <div class="detail-item">
                <span class="detail-label">Location</span>
                <span class="detail-value"><%= painting.location %></span>
              </div>
              <% } %>
              
              <div class="detail-item">
                <span class="detail-label">Status</span>
                <span class="detail-value">
                  <span class="status-indicator">
                    <span class="status-dot <%= painting.isOnDisplay == 'true' || painting.isOnDisplay === true ? 'on-display' : 'not-display' %>"></span>
                    <%= painting.isOnDisplay == 'true' || painting.isOnDisplay === true ? 'On Display' : 'In Storage' %>
                  </span>
                </span>
              </div>
              
              <% if (painting.provenance) { %>
              <div class="detail-item">
                <span class="detail-label">Provenance</span>
                <span class="detail-value"><%= painting.provenance %></span>
              </div>
              <% } %>
            </div>

            <% if (painting.price) { %>
            <div class="price-section">
              <div class="price-value">
                <%= painting.price %> <%= painting.priceCurrency || '' %>
              </div>
              <div class="price-label">Market Value</div>
            </div>
            <% } %>

            <% if (painting.tags && painting.tags.length > 0) { %>
            <div class="tags-container">
              <span class="detail-label">Tags</span>
              <div class="tags-wrapper">
                <% painting.tags.forEach(function(tag) { %>
                <span class="tag"><%= tag.trim() %></span>
                <% }) %>
              </div>
            </div>
            <% } %>

            <% if (painting.description) { %>
            <div class="description">
              <span class="detail-label">Description</span>
              <p class="description-text"><%= painting.description %></p>
            </div>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script>
  const input = document.getElementById('artistSearch');
  const suggestions = document.getElementById('suggestions');

  let debounceTimer;
  input.addEventListener('input', function() {
    clearTimeout(debounceTimer);
    const value = this.value.trim();
    if (!value) {
      suggestions.style.display = 'none';
      suggestions.innerHTML = '';
      return;
    }
    debounceTimer = setTimeout(() => {
      fetch('/api/artists?search=' + encodeURIComponent(value))
        .then(res => res.json())
        .then(data => {
          if (data.artists && data.artists.length > 0) {
            suggestions.innerHTML = '';
            data.artists.forEach(name => {
              const li = document.createElement('li');
              li.textContent = name;
              li.style.cssText = 'padding:10px 18px;cursor:pointer;border-bottom:1px solid #f1f5f9;font-size:1rem;color:#3b3c48;';
              li.onclick = () => {
                input.value = name;
                suggestions.style.display = 'none';
                suggestions.innerHTML = '';
                // Optional: do something after selection, e.g., fetch paintings by artist!
                window.location.href = '/api/artworks/artist/' + encodeURIComponent(name);
              };
              suggestions.appendChild(li);
            });
            suggestions.style.display = 'block';
          } else {
            suggestions.innerHTML = '';
            suggestions.style.display = 'none';
          }
        });
    }, 180);
  });

  // Hide suggestions when clicking outside
  document.addEventListener('click', function(e) {
    if (!suggestions.contains(e.target) && e.target !== input) {
      suggestions.style.display = 'none';
    }
  });
</script>

  </body>
</html>