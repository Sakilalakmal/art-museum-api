<!DOCTYPE html>
<html>
  <head>
    <title>Paintings by <%= artist %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            animation: {
              'bounce-soft': 'bounce 0.6s ease-in-out',
              'fade-in': 'fadeIn 0.3s ease-out',
              'scale-in': 'scaleIn 0.3s ease-out'
            },
            keyframes: {
              fadeIn: {
                '0%': { opacity: '0', transform: 'translateY(20px)' },
                '100%': { opacity: '1', transform: 'translateY(0)' }
              },
              scaleIn: {
                '0%': { opacity: '0', transform: 'scale(0.95)' },
                '100%': { opacity: '1', transform: 'scale(1)' }
              }
            }
          }
        }
      }
    </script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
      body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 text-slate-800">
    
    <!-- Add Artwork Button -->
    <a href="/api/artworks" class="fixed top-6 right-6 z-50 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white px-6 py-3 rounded-full font-semibold text-sm shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 flex items-center gap-2">
      <span class="text-lg">‚ú®</span>
      Add Artwork
    </a>
    
    <!-- Header -->
    <div class="max-w-7xl mx-auto px-6 py-8">
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">
          Artworks by <%= artist %>
        </h1>
        <p class="text-lg text-slate-600">
          <a href="/api/artworks/paintings" class="text-indigo-600 hover:text-indigo-800 underline underline-offset-4 decoration-2 transition-colors duration-200 font-medium">
            ‚Üê Back to All Paintings
          </a>
        </p>
      </div>
      
      <!-- Gallery Container -->
      <div class="animate-scale-in">
        <% if (paintings.length === 0) { %>
        <!-- Empty State -->
        <div class="text-center py-20">
          <div class="text-8xl mb-6 opacity-50">üé®</div>
          <h2 class="text-2xl font-bold text-slate-700 mb-3">No Paintings Found</h2>
          <p class="text-slate-500 text-lg">No artworks found for this artist.</p>
        </div>
        <% } else { %>
        
        <!-- Paintings Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8">
          <% paintings.forEach(function(painting, index) { %>
          <div class="group bg-white rounded-3xl shadow-md hover:shadow-2xl transition-all duration-500 overflow-hidden border border-slate-200/50 hover:-translate-y-2 animate-fade-in" >
            
            <!-- Image Container -->
            <div class="relative overflow-hidden h-72 bg-slate-100">
              <img 
                src="<%= painting.imageUrl %>" 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
                alt="<%= painting.title %>" 
                loading="lazy"
              />
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-xl px-3 py-2 text-xs font-semibold text-slate-700 shadow-lg">
                <%= painting.catalogNumber || 'Uncatalogued' %>
              </div>
            </div>
            
            <!-- Card Content -->
            <div class="p-6">
              <!-- Title and Artist -->
              <h2 class="text-xl font-bold text-slate-800 mb-2 line-clamp-2">
                <%= painting.title %>
              </h2>
              
              <div class="flex items-center gap-3 mb-6 pb-4 border-b border-slate-100">
                <span class="text-lg font-semibold text-indigo-600">
                  <%= painting.artist %>
                </span>
                <% if (painting.year) { %>
                <span class="bg-slate-100 text-slate-600 px-3 py-1 rounded-full text-sm font-medium">
                  <%= painting.year %>
                </span>
                <% } %>
              </div>

              <!-- Details Grid -->
              <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Genre</span>
                  <p class="text-sm font-medium text-slate-700"><%= painting.genre %></p>
                </div>
                
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Medium</span>
                  <p class="text-sm font-medium text-slate-700"><%= painting.medium %></p>
                </div>
                
                <% if (painting.dimensions) { %>
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Dimensions</span>
                  <p class="text-sm font-medium text-slate-700"><%= painting.dimensions %></p>
                </div>
                <% } %>
                
                <% if (painting.location) { %>
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Location</span>
                  <p class="text-sm font-medium text-slate-700"><%= painting.location %></p>
                </div>
                <% } %>
                
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Status</span>
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full <%= painting.isOnDisplay == 'true' || painting.isOnDisplay === true ? 'bg-emerald-500' : 'bg-red-500' %>"></div>
                    <span class="text-sm font-medium text-slate-700">
                      <%= painting.isOnDisplay == 'true' || painting.isOnDisplay === true ? 'On Display' : 'In Storage' %>
                    </span>
                  </div>
                </div>
                
                <% if (painting.provenance) { %>
                <div class="space-y-1">
                  <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Provenance</span>
                  <p class="text-sm font-medium text-slate-700"><%= painting.provenance %></p>
                </div>
                <% } %>
              </div>

              <!-- Price Section -->
              <% if (painting.price) { %>
              <div class="bg-gradient-to-r from-slate-50 to-slate-100 rounded-2xl p-4 mb-6 border border-slate-200/50">
                <div class="text-2xl font-bold text-emerald-600 mb-1">
                  <%= painting.price %> <%= painting.priceCurrency || '' %>
                </div>
                <div class="text-sm text-slate-500 font-medium">Market Value</div>
              </div>
              <% } %>

              <!-- Tags -->
              <% if (painting.tags && painting.tags.length > 0) { %>
              <div class="mb-6">
                <span class="text-xs font-bold text-slate-500 uppercase tracking-wider block mb-3">Tags</span>
                <div class="flex flex-wrap gap-2">
                  <% painting.tags.forEach(function(tag) { %>
                  <span class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-3 py-1 rounded-full text-xs font-medium">
                    <%= tag.trim() %>
                  </span>
                  <% }) %>
                </div>
              </div>
              <% } %>

              <!-- Description -->
              <% if (painting.description) { %>
              <div class="pt-4 border-t border-slate-100">
                <span class="text-xs font-bold text-slate-500 uppercase tracking-wider block mb-2">Description</span>
                <p class="text-sm text-slate-600 leading-relaxed line-clamp-3">
                  <%= painting.description %>
                </p>
              </div>
              <% } %>
              
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>